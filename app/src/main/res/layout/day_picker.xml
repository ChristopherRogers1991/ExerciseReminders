<?xml version="1.0" encoding="utf-8"?>
<!-- Inspired by https://stackoverflow.com/a/45987793 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:id="@+id/t0"
        android:checked="true"
        android:textOff="S"
        android:textOn="S"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>
    <ToggleButton
        android:id="@+id/t1"
        android:checked="true"
        android:textOff="M"
        android:textOn="M"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <ToggleButton
        android:id="@+id/t2"
        android:checked="true"
        android:textOff="T"
        android:textOn="T"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <ToggleButton
        android:id="@+id/t3"
        android:checked="true"
        android:textOff="W"
        android:textOn="W"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <ToggleButton
        android:id="@+id/t4"
        android:checked="true"
        android:textOff="T"
        android:textOn="T"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <ToggleButton
        android:id="@+id/t5"
        android:checked="true"
        android:textOff="F"
        android:textOn="F"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />

    <Space
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>

    <ToggleButton
        android:id="@+id/t6"
        android:checked="true"
        android:textOff="S"
        android:textOn="S"
        style="@style/toggleButton"
        android:background="@drawable/toggle_background_selector" />
</LinearLayout>
